
@using LogitWebApp.ViewModels.Drivers
@model AllShipmentsWithAddresses

<div class="col-xl-6">
    <div class="row">
        <div class="col-8">
            <label asp-for="@Model.LoadingAddress" class="mb-1"></label>
            <input asp-for="@Model.LoadingAddress" readonly class="form-control mb-2" />
        </div>

        <div class="col-4">
            <label asp-for="@Model.LoadingDate" class="mb-1">Дата на товарене</label>
            <input asp-for="@Model.LoadingDate" type="text" readonly class="form-control  mb-2" value="@Model.LoadingDate.ToString("dd-MM-yyyy")">
        </div>

        <div class="col-8">
            <label asp-for="@Model.UnloadingAddress" class="mb-1"></label>
            <input asp-for="@Model.UnloadingAddress" readonly class="form-control  mb-2" value="@Model.UnloadingAddress">
        </div>

        <div class="col-4">
            <label asp-for="@Model.UnloadingDate" class="mb-1">Дата на разтоварване</label>
            <input asp-for="@Model.UnloadingDate" type="text" readonly class="form-control  mb-2" value="@Model.UnloadingDate.ToString("dd-MM-yyyy")">
        </div>
    </div>
</div>

