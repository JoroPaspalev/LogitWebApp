@using LogitWebApp.ViewModels.Message
@model List<MessageByGroupAndCountViewModel>


<section class="probootstrap-cover overflow-hidden relative" style="background-image: url('/img/bg_1.jpg');" data-stellar-background-ratio="0.5" id="section-home">
    <div class="overlay"></div>
    <div class="container">
        <div class="row pt-2">
            <div class=" col-md-12">

                @foreach (var message in Model)
                {
                    <form asp-controller="Orders" asp-action="Chat" class=" messagingJP">

                        <input type="text" readonly hidden name="orderId" value="@message.OrderId" />
                        <button class="btn btn-warning  btn-block text-left">
                            <i class="fas fa-home"></i>
                            По поръчка: @message.OrderId имате <span class="msgInside">@message.CountUnreadMessages</span> непрочетени съобщения
                        </button>

                    </form>
                }
            </div>
        </div>
    </div>
</section>

