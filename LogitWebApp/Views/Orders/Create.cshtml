

<section class="probootstrap-cover overflow-hidden relative" style="        background-image: url('/img/bg_1.jpg');" data-stellar-background-ratio="0.5" id="section-home">
    <div class=""></div>
    <div class="container">

        <div class="row align-items-center p-0">

            <div class="col probootstrap-animate">
                <form action="/Orders/Create" method="post" class="probootstrap-form">
                    <div class="form-group">
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="form-group">
                                    <label class="mb-3" for="id_label_single">Адрес на товарене</label>
                                    <div class="mb-3"><input type="text" name="loadingName" placeholder="Име/Фирма" class="form-control" method="post"></div>
                                    <div class="mb-3"><input type="text" name="loadingPhone" placeholder="Телефон" class="form-control" method="post"></div>
                                    <div class="mb-3"><input type="text" name="loadingEmail" placeholder="Email" class="form-control"></div>
                                    <div class="mb-3"><input type="text" name="loadingTown" placeholder="Населено място" class="form-control" method="post"></div>
                                    <div class="mb-3"><input type="text" name="loadingStreet" placeholder="Улица" class="form-control"></div>
                                    <div class="mb-3"><input type="text" name="loadingNumber" placeholder="№" class="form-control"></div>
                                </div>
                            </div>

                            <div class="col-6">
                                <div class="form-group">
                                    <label class="mb-3" for="id_label_single">Адрес на товарене</label>
                                    <div class="mb-3"><input type="text" name="unloadingName" placeholder="Име/Фирма" class="form-control" method="post"></div>
                                    <div class="mb-3"><input type="text" name="unloadingPhone" placeholder="Телефон" class="form-control" method="post"></div>
                                    <div class="mb-3"><input type="text" name="unloadingEmail" placeholder="Email" class="form-control"></div>
                                    <div class="mb-3"><input type="text" name="unloadingTown" placeholder="Населено място" class="form-control" method="post"></div>
                                    <div class="mb-3"><input type="text" name="unloadingStreet" placeholder="Улица" class="form-control"></div>
                                    <div class="mb-3"><input type="text" name="unloadingNumber" placeholder="№" class="form-control"></div>

                                    <div class="mb-3"><input type="hidden" name="shipmentId"  value="@ViewBag.ShipmentId"></div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END row -->

                    <div class="row mb-5">
                        <div class="col-md">
                            <div class="form-group">
                                <label for="probootstrap-date-departure">Ден на товарене</label>
                                <div class="probootstrap-date-wrap">
                                    <span class="icon ion-calendar"></span>
                                    <input type="text" id="probootstrap-date-departure" name="loadingDate" class="form-control" placeholder="Дата">
                                </div>
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="form-group">
                                <label for="probootstrap-date-arrival">Ден на разтоварване</label>
                                <div class="probootstrap-date-wrap">
                                    <span class="icon ion-calendar"></span>
                                    <input type="text" id="probootstrap-date-arrival" name="unloadingDate" class="form-control" placeholder="Дата">
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END row -->
                    <div class="row">
                        <div class="col-7">

                        </div>

                        <div class="col-5">
                            <input type="submit" value="Направи поръчка" class="btn btn-success btn-block">
                        </div>

                        @*<div class="col-5 pt-5 text-center">
                                <div class="button-holder">
                                    <a href="/Orders/Create?shipmentId=@ViewBag.ShipmentId"  class="btn btn-success btn-block text-uppercase">Направи поръчка</a>
                                </div>
                            </div>*@

                    </div>

                </form>
            </div>
        </div>
    </div>

</section>