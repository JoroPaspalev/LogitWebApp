@using LogitWebApp.ViewModels.Users
@model UserOrderViewModel

<div class="bg-dark pt-5 pb-4"></div>

<div class="container">
    <div class="row pt-2">
        <div class=" col-md-8 offset-2">
            <!--Carousel Wrapper-->
            <div id="carousel-example-2" class="carousel slide carousel-fade z-depth-1-half" data-ride="carousel">

                <!--Slides-->
                <div class="carousel-inner" role="listbox">
                    @if (Model.Images.Count > 0)
                    {
                        <div class="carousel-item active">
                            <div class="view">
                                <img class="d-block w-100" src="@Model.Images.ToList()[0].ImageUrl">
                            </div>
                        </div>
                    }

                    @for (int i = 1; i < Model.Images.Count; i++)
                    {
                        <div class="carousel-item">
                            <div class="view">
                                <img class="d-block w-100" src="@Model.Images.ToList()[i].ImageUrl">
                            </div>
                        </div>
                    }


                </div>
                <!--/.Slides-->
                <!--Controls-->
                <a class="carousel-control-prev" href="#carousel-example-2" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-example-2" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <!--/.Controls-->
            </div>
            <!--/.Carousel Wrapper-->

        </div>
    </div>
</div>